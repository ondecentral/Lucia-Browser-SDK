{
  "name": "lucia-sdk",
  "version": "0.9.1",
  "license": "CC-BY-NC-4.0",
  "description": "Lucia JavaScript Library",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "umd": "dist/umd",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package:clean": "rm -rf dist",
    "package:copy": "cp package.json dist && cp README.md dist",
    "package:build": "yarn package:clean && rollup -c && yarn package:copy",
    "package:release": "release-it",
    "package:publish": "yarn package:build && yarn publish",
    "tsc": "tsc --pretty --noEmit",
    "prepare": "yarn package:build",
    "setup": "husky install",
    "validate": "npm-run-all --parallel lint tsc",
    "commitlint": "commitlint",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "yarn lint --fix",
    "format": "npx prettier --config .prettierrc \"**/*.{css,scss,js,ts,md}\" --write",
    "format:test": "npx prettier --config .prettierrc \"**/*.{css,scss,js,ts,md}\" -l"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.2.0",
    "@release-it/conventional-changelog": "^10.0.4",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^29.2.4",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "babel-eslint": "^10.1.0",
    "commitlint": "^20.2.0",
    "eslint": "^8.33.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sort-destructure-keys": "^1.4.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-unicorn": "^45.0.2",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.4.1",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "release-it": "^19.0.0",
    "rollup": "^2.70.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-jest": "^29.0.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "uuid": "^10.0.0"
  },
  "resolutions": {
    "conventional-changelog-conventionalcommits": "^9.1.0"
  }
}
