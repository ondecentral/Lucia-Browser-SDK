{
  "name": "lucia-sdk",
  "version": "0.9.9",
  "license": "CC-BY-NC-4.0",
  "description": "Lucia JavaScript Library",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ondecentral/Lucia-Browser-SDK.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "umd": "dist/umd",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package:clean": "rm -rf dist",
    "package:copy": "cp package.json dist && cp README.md dist",
    "package:build": "yarn package:clean && rollup -c && yarn package:copy",
    "package:release": "release-it",
    "package:publish": "yarn package:build && npm publish --access public",
    "tsc": "tsc --pretty --noEmit",
    "prepare": "yarn package:build",
    "postinstall": "husky || true",
    "validate": "npm-run-all --parallel lint tsc",
    "commitlint": "commitlint",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "format": "npx prettier --config .prettierrc \"**/*.{css,scss,js,ts,md}\" --write",
    "format:test": "npx prettier --config .prettierrc \"**/*.{css,scss,js,ts,md}\" -l"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.2.0",
    "@release-it/conventional-changelog": "^10.0.4",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/jest": "^30.0.0",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "typescript-eslint": "^8.50.1",
    "commitlint": "^20.2.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.11.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "release-it": "^19.2.1",
    "rollup": "^4.54.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "uuid": "^13.0.0"
  },
  "resolutions": {
    "conventional-changelog-conventionalcommits": "^9.1.0"
  }
}
